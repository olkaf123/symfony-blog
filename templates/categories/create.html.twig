{% extends 'base.html.twig' %}

{% block title %}{{ 'categories.add.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'categories.add.h1'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('category_create') }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    {{ form_end(form) }}
{% endblock %}
