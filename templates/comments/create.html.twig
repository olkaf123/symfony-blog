{% extends 'base.html.twig' %}

{% block title %}{{ 'comments.add.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comments.add.h1'|trans }} ({{ post.topic }})</h1>
    {{ form_start(form, { method: 'POST', action: url('comment_create', {'id': post.id}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    {{ form_end(form) }}
{% endblock %}
